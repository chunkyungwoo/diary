extends ../layout

block content 
    link(rel="stylesheet", href="/css/join.css")
    script(src="/js/join.js") 
    form.join(method="POST") 
        if NEED 
            div.error= NEED 
        div.id 
            label.idlabel(for="") ID 
            input.idcheck(type="text",name="m_id",id="id")
            input.checkID(type="button",value="중복확인",id="checkid")
        div 
            label(for="") 비밀번호
            input(type="password",name="m_password",id="password")  
        div 
            label(for="") 비밀번호 확인
            input.pw(type="password",name="re_password",id="re_password")
            span(id="checkpw")
        div 
            label(for="") 이름
            input(type="text",name="m_name",id="name")
        div 
            label(for="") 전화번호
            input(type="text",name="m_tel",id="tel")
        div 
            label(for="") 이메일
            input(type="text",name="m_email",id="email")
        div.btn
            input(type="button",id="join_btn",value="회원가입")